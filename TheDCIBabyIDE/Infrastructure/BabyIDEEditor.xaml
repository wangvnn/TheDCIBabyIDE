<UserControl x:Class="KimHaiQuang.TheDCIBabyIDE.BabyIDEEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid x:Name="BabyIDEPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="5" Width="5*"/>
            <ColumnDefinition />         
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentControl x:Name="FullCodeEditor" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
        <GridSplitter x:Name="FulllPartialSplitter" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Width="5" Height="100"/>
        <Grid Grid.Column="2">
        	<ContentControl x:Name="partialFile" Margin="147.5,0,-52.5,-200"/>
        	<StackPanel x:Name="interaction" Grid.Row="0" Margin="147.5,0,-52.5,-200"/>
        </Grid>
    </Grid>
</UserControl>
